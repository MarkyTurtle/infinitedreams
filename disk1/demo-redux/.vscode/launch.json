{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "FS-UAE Launch",
            "noDebug": true,
            "program": "${workspaceFolder}/uae/dh0/demo",
            "remoteProgram": "SYS:demo",
            "emulatorType": "fs-uae",
            "emulatorArgs": [
                "--hard_drive_0=${workspaceFolder}/uae/dh0",
                "--automatic_input_grab=1",
                "--floppy-image-0=${workspaceFolder}/disks/DosDisk1.adf",
                "--floppy-image-1=${workspaceFolder}/disks/DosDisk2.adf",
                "--video_sync=off"
            ],
            "preLaunchTask": "amigaassembly: build"
        },
        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "FS-UAE Debug",
            "stopOnEntry": true,
            "noDebug": false,
            "program": "${workspaceFolder}/uae/dh0/demo",
            "remoteProgram": "SYS:demo",
            "emulatorType": "fs-uae",
            "emulatorArgs": [
                "--hard_drive_0=${workspaceFolder}/uae/dh0",
                "--automatic_input_grab=1",
                "--floppy-image-0=${workspaceFolder}/disks/DosDisk1.adf",
                "--floppy-image-1=${workspaceFolder}/disks/DosDisk2.adf",
                "--video_sync=off"
            ],
            "preLaunchTask": "amigaassembly: build"
        },
        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "WinUAE Debug",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/uae/dh0/demo",
            "remoteProgram": "demo",
            "emulatorType": "winuae",
            "emulatorArgs": [
                "-s",
                "filesystem=rw,dh0:${workspaceFolder}/uae/dh0"
            ],
            "preLaunchTask": "amigaassembly: build"
        },
        {
            "type": "amiga-assembly",
            "request": "launch",
            "name": "WinUAE Launch",
            "noDebug": true,
            "program": "${workspaceFolder}/uae/dh0/demo",
            "remoteProgram": "demo",
            "emulatorType": "winuae",
            "emulatorArgs": [
                "-s",
                "filesystem=rw,dh0:${workspaceFolder}/uae/dh0"
            ],
            "preLaunchTask": "amigaassembly: build"
        }
    ]
}
